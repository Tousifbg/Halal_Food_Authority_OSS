<!--tab menu-->
    <LinearLayout

        android:id="@+id/tabmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="end"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fabMain"
        app:layout_constraintEnd_toEndOf="parent">

        <!--Register Business-->
        <LinearLayout
            android:id="@+id/layoutRegisterBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_business" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRegisterBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />

        </LinearLayout>
        <!--Register Product-->
        <LinearLayout
            android:id="@+id/layoutRegisterProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_product" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRegisterProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />

        </LinearLayout>
        <!--Training-->
        <LinearLayout
            android:id="@+id/layoutTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/training" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />

        </LinearLayout>
        <!--Complaint-->
        <LinearLayout
            android:id="@+id/layoutComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/complaint" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCompliant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </LinearLayout>
        <!--Feedback-->
        <LinearLayout
            android:id="@+id/layoutFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_dialog_map" />
        </LinearLayout>

    </LinearLayout>

